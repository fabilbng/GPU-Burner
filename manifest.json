{
  "manifest_version": 2,

  "name": "GPU-Burner",
  "description": "Getting GPU's on a daily basis",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "plugins/webtext-options.js",
      "optionsStorage.js",
      "plugins/jquery.min.js",
      "backgroundscripts/globalfunctions.js",
      "backgroundscripts/nbb.js",
      "backgroundscripts/akvpwr-bypass.js"
    ]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["plugins/jquery.min.js","optionsStorage.js", "globalContentScripts/akvpwr-bypass.js"]
    },
    {
      "matches": [
        "https://www.notebooksbilliger.de/*"
      ],
      "js": ["notificationDIV.js"]
    },
    {
      "matches": [
        "https://www.notebooksbilliger.de/*"
      ],
      "js":["addToCartScripts/nbb.js"]
    },
    {
      "matches":[
        "https://www.notebooksbilliger.de/kasse",
        "https://www.notebooksbilliger.de/kasse/unregistriert"
      ],
      "js": ["checkoutSiteScripts/nbb-kasse.js"]
    },
    {
      "matches": [
        "https://www.notebooksbilliger.de/kasse/zusammenfassung"
      ],
      "js": ["checkoutSiteScripts/nbb-summary.js"]
    }
  ]
}